<div class="ui two column centered grid vertical-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "ui form" }) do |f| %>
  <div class="column">
    <h2 class="ui blue header">Sign Up</h2>
    <div class="field">
      <div class="ui left icon input">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail address" %>
        <i class="user icon"></i>
      </div>
    </div>

    <div class="field">
      <div class="ui left icon input">
        <% if @minimum_password_length
          @password_placeholder = "(" + @minimum_password_length.to_s + " characters minimum" + ")"
        end %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password #{@password_placeholder}" %>
        <i class="lock icon"></i>
      </div>
    </div>

    <div class="field">
      <div class="ui left icon input">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password again" %>
        <i class="lock icon"></i>
      </div>
    </div>

    <%= f.submit "Create Account", class: "ui primary button" %>
  </div>

  <div class="ui card">
    <div class="content">
        <%= render "devise/shared/links" %>
    </div>
  </div>

        


</div>


  <% end %>


<%= render "devise/shared/error_messages", resource: resource %>


