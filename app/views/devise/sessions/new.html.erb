<div class="ui two column centered grid vertical-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "ui form" }) do |f| %>
  <div class="column">
    <h2 class="ui blue header">Log in</h2>
    <div class="field">
      <div class="ui left icon input">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail address" %>
        <i class="user icon"></i>
      </div>
    </div>

    <div class="field">
      <div class="ui left icon input">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
        <i class="lock icon"></i>
      </div>
    </div>

    <%= f.submit "Log in", class: "ui primary button" %>
  </div>

  <div class="ui card">
    <div class="content">
        <%= render "devise/shared/links" %>
    </div>
  </div>

</div>

  <% end %>



